{
  "compilerOptions": {
    "moduleResolution": "node",
    "baseUrl": "src",
    "rootDir": "./src",
    "outDir": "./build",
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["*"],
      "@/app/*": ["app/*"],
      "@/entities/*": ["entities/*"],
      "@/features/*": ["features/*"],
      "@/pages/*": ["pages/*"],
      "@/shared/*": ["shared/*"],
      "@/widgets/*": ["widgets/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
